{% extends 'base.html.twig' %}

{% block body %}
    <h1>Books list</h1>
    
    {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('_new') }}">Create a new book</a>
    {% endif %}
          
    <div class="books row">
        {% for book in books %}
            <div class ="book col-xs-12 col-sm-6 col-md-4 col-lg-2">
                {% if book.cover %}
                    <div class="cover">
                        <img src="{{asset('uploads/covers/') ~ book.cover}}"/>
                    </div>
                {% endif %}
                <p>{{ book.name }}</p>
                <p>{{ book.author }}</p>
                <div>{% if book.readIt %}{{ book.readIt|date('Y-m-d') }}{% endif %}</div>
                {% if book.file and (book.allowDownload or is_granted('ROLE_ADMIN'))%}
                    <a class="download" href="{{asset('uploads/files/') ~ book.file}}" download/>download</a>
                {% endif %}
                {% if is_granted('ROLE_ADMIN') %}
                    <div>
                        <a href="{{ path('_edit', { 'id': book.id }) }}">edit</a>
                    </div>
                {% endif %}
            </div>
        {% endfor %}
    </div>
{% endblock %}
