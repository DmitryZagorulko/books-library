{% extends 'base.html.twig' %}

{% block body %}
    <h1>Books list</h1>
    
    {% if is_granted('ROLE_ADMIN') %}
        <ul>
            <li>
                <a href="{{ path('_new') }}">Create a new book</a>
            </li>
        </ul>
    {% endif %}
    
    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Author</th>
                <th>Cover</th>
                <th>File</th>
                <th>Readit</th>
                <th>Allowdownload</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for book in books %}
            <tr>
                <td><a href="{{ path('_show', { 'id': book.id }) }}">{{ book.id }}</a></td>
                <td>{{ book.name }}</td>
                <td>{{ book.author }}</td>
                <td>{{ book.cover }}</td>
                <td>{{ book.file }}</td>
                <td>{% if book.readIt %}{{ book.readIt|date('Y-m-d') }}{% endif %}</td>
                <td>{% if book.allowDownload %}Yes{% else %}No{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('_show', { 'id': book.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('_edit', { 'id': book.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
